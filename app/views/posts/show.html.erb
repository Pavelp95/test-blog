<article class="post">
	<section class="post-head">
		<h1><%= post.title %></h1>
		<small>
			<time>
				<% if user_signed_in? %>
					<%= post.decorate.time_set %>
					|
					<%= link_to 'Изменить', edit_post_path(post) %>
					|
					<%= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Вы уверынны?'}%>
				<% else %>
					<%= post.decorate.time_set %>
				<% end %>
			</time>
		</small>
	</section>
	<section class="post-body">
		<%= image_tag post.image.url(:large), class: 'img-show' if post.image? %>
		<%= post.summary %>
	</section>
</article>

<%= render 'disqus' %>
